.wrapper_with_padding
  #doc_show
    %h1.title= @doc.title
    %p= simple_format(@doc.content)
    %p #{TextAnalysis.analyze_text(@doc.content).total_words} Words / #{TextAnalysis.analyze_text(@doc.content).total_characters} Characters

    .buttons
      = link_to "Edit Note", edit_doc_path(@doc), class: "button"
      = link_to "Delete Note", doc_path(@doc), method: :delete, data: { confirm: "Are you sure?" }, class: "button"